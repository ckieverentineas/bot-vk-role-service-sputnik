generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id       Int      @id @default(autoincrement())
  idvk     Int      @unique
  id_role  Int      @default(1)
  censored Boolean  @default(true)
  banned   Boolean  @default(false)
  donate   Boolean  @default(false)
  crdate   DateTime @default(now())
  online   DateTime @default(now())
  Blank    Blank[]
  Vision   Vision[]
  Report   Report[]
  BlackList BlackList[]
  PkMeterSettings PkMeterSettings?
}

model BlackList {
  id       Int      @id @default(autoincrement())
  idvk     Int
  id_account Int
  account    Account  @relation(fields: [id_account], references: [id], onDelete: Cascade)
}

model Blank {
  id         Int      @id @default(autoincrement())
  text       String
  photo      String   @default("")
  id_account Int
  account    Account  @relation(fields: [id_account], references: [id], onDelete: Cascade)
  banned     Boolean  @default(false)
  crdate     DateTime @default(now())
  Vision     Vision[]
  Report     Report[]
}

model Vision {
  id         Int     @id @default(autoincrement())
  id_account Int
  account    Account @relation(fields: [id_account], references: [id], onDelete: Cascade)
  id_blank   Int
  blank      Blank   @relation(fields: [id_blank], references: [id], onDelete: Cascade)
}

model Mail {
  id         Int     @id @default(autoincrement())
  blank_to   Int
  blank_from Int
  read       Boolean @default(false)
  status     Boolean @default(false)
  find       Boolean @default(true)
}

model Report {
  id         Int     @id @default(autoincrement())
  text       String
  id_blank   Int
  blank      Blank   @relation(fields: [id_blank], references: [id], onDelete: Cascade)
  id_account Int
  account    Account @relation(fields: [id_account], references: [id], onDelete: Cascade)
  status     String  @default("wait")
}

model PkMeterSettings {
  id         Int     @id @default(autoincrement())
  id_account Int     @unique
  account    Account @relation(fields: [id_account], references: [id], onDelete: Cascade)
  
  // Настройки для одного ролевика
  single_chars         Boolean @default(true)
  single_chars_no_spaces Boolean @default(true)
  single_words         Boolean @default(true)
  single_pk           Boolean @default(true)
  single_mb           Boolean @default(true)
  single_sentences    Boolean @default(true)
  single_post_percent Boolean @default(true)
  single_comment_percent Boolean @default(true)
  single_discussion_percent Boolean @default(true)
  
  // Настройки для нескольких ролевиков
  multi_chars         Boolean @default(true)
  multi_chars_no_spaces Boolean @default(true)
  multi_words         Boolean @default(true)
  multi_pk           Boolean @default(true)
  multi_mb           Boolean @default(true)
  multi_sentences    Boolean @default(true)
  multi_message_count Boolean @default(true)
  multi_sentence_count Boolean @default(true)
  
  crdate DateTime @default(now())
}
